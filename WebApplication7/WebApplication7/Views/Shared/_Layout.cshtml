@using Tavlor4Life.Helpers;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" type="text/css" />    
    
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-static-top">
        <div class="container">

                <a class="navbar-brand nav pull-left"> <img class="loggan" src="~/Content/Image/logo.png" /> </a>

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="collapse navbar-collapse navHeaderCollapse">

                    <ul class="nav navbar-nav navbar-left">

                        <li @Html.IsActive("Index", "Home", "class=\"active\"") >@Html.ActionLink("Home", "Index", "Home")</li>
                        <li @Html.IsActive("Galleri", "Home", "class=\"active\"") >@Html.ActionLink("Galleri", "Galleri", "Home")</li>
                        <li @Html.IsActive("Contact", "Home", "class=\"active\"") >@Html.ActionLink("Contact", "Contact", "Home")</li>

                    </ul>

                    <ul class="nav navbar-nav navbar-right">

                        <li @Html.IsActive("Login", "Account", "class=\"active\"") >@Html.ActionLink("Login", "Login", "Account")</li>
                        <li @Html.IsActive("Account", "Account", "class=\"active\"") >@Html.ActionLink("Account", "Account", "Account")</li>

                    </ul>

                </div>
            </div>
    </div>
    @RenderBody()
    <div class="navbar navbar-default">
        
        <div class="container">
            <p class="navbar-text">© 2016 4-Amigos</p>
            <p class="navbar-text navbar-right"> <a href="#"> <img src="~/Content/Image/twitter.png" height="25" width="25" /> </a> </p>
            <p class="navbar-text navbar-right"> <a href="#"> <img src="~/Content/Image/instagram.png" height="25" width="25" /> </a> </p>
            <p class="navbar-text navbar-right"> <a href="#"> <img src="~/Content/Image/facebook.png" height="25" width="25" /> </a> </p>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>